{
  "extends": "@total-typescript/tsconfig/tsc/no-dom/app",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@packages/providers": [
        "libs/providers/src"
      ],
      "@packages/providers/*": [
        "libs/providers/src/*"
      ],
      "@shared/dtos": [
        "libs/dtos/src"
      ],
      "@shared/dtos/*": [
        "libs/dtos/src/*"
      ]
    },
    "verbatimModuleSyntax": false
  }
}