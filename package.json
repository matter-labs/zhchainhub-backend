{
  "name": "hyperhub",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "prepare": "husky",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "packages/**",
    "tooling/**"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "19.2.2",
    "@hyperhub/test-config": "workspace:*",
    "@hyperhub/typescript-config": "workspace:*",
    "@types/node": "18.13.0",
    "commitlint": "19.3.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.4",
    "prettier": "3.2.5",
    "ts-node-dev": "2.0.0",
    "turbo": "1.13.3",
    "typescript": "4.9.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "**/*.{md,json,yml,yaml}": "prettier --write"
  },
  "packageManager": "yarn@4.2.2"
}
