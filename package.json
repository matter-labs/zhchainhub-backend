{
  "name": "hyperhub",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "packages/*",
    "tooling/*"
  ],
  "devDependencies": {
    "@hyperhub/test-config": "workspace:*",
    "@hyperhub/typescript-config": "workspace:*",
    "prettier": "3.2.5",
    "turbo": "latest"
  },
  "packageManager": "yarn@4.2.2"
}
