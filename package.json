        "@zkchainhub/prettier-config": "workspace:*",
        "@zkchainhub/test-config": "workspace:*",
        "commitlint": "19.3.0",
        "eslint": "8.56.0",
        "husky": "9.0.11",
        "lint-staged": "13.2.3",
        "prettier": "3.2.5",
        "rimraf": "5.0.7",
        "ts-node-dev": "2.0.0",
        "turbo": "1.13.3",
        "typescript": "5.4.5",
        "vitest": "1.6.0"
